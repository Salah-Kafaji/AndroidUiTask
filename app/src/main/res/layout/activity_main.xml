<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_background"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-3dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:elevation="10dp">
                <ImageView
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/profile" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/droid_sans_mono"
                android:text="Ahmed hassan"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/droid_sans_mono"
                android:padding="0db"
                android:text="Engineer"
                android:textColor="#De122940"
                android:textFontWeight="500"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start|bottom"
                android:padding="0dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="16dp"
                    android:tint="#FF0D0D"
                    app:srcCompat="@drawable/ic_baseline_location_on_24" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/droid_sans_mono"
                    android:padding="0db"
                    android:text="UK"
                    android:textColor="#99263238"
                    android:textSize="13dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_background"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid_sans_mono"
                    android:padding="0db"
                    android:text="(150 Reviews)"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid_sans_mono"
                    android:paddingStart="4dp"
                    android:text="4.5"
                    android:textColor="#000000"
                    android:textFontWeight="500"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:paddingStart="4dp"
                    android:contentDescription="@string/todo"
                    android:tint="#F9D100"
                    app:srcCompat="@drawable/ic_baseline_star_rate_24" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="end"
            android:paddingStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/red_rounded"
                android:fontFamily="@font/droid_sans_mono"
                android:text=" 3 hr "
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/droid_sans_mono"
                android:text="Russian"
                android:textColor="#DE122940"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droid_sans_mono"
                android:text="5 Days ago"
                android:textColor="#61122940"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>